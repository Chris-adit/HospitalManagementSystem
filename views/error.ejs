<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="text-center">
        <div class="display-1 text-danger mb-4">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="display-4 text-danger mb-3">Oops! Something went wrong</h1>
        <p class="lead text-muted mb-4">
            <%= error || 'An unexpected error occurred' %>
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>Go to Dashboard
            </a>
            <button class="btn btn-outline-secondary btn-lg back-btn">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>

<script src="/js/error.js"></script>
